#include <stdio.h>
#include <stdlib.h>

int main()
{
{
   int m, n, c, d, M[10][10], max;

   printf("Entre com o numero de linhas e colunas da matriz\n");
   scanf("%d%d",&m,&n);
   printf("Entre com os elementos da matriz\n");

   for( c = 0 ; c < m ; c++ )
   {
      for( d = 0 ; d < n ; d++ )
      {
         scanf("%d",&matrix[c][d]);
      }
   }

   maximum = matrix[0][0];

   for( c = 0 ; c < m ; c++ )
   {
      for( d = 0 ; d < n ; d++ )
      {
         if ( M[c][d] > max )
            max = M[c][d];
      }
   }

   printf("O maior elemento na matriz eh %d\n", maximum);

   getch();
   return 0;
}
}
